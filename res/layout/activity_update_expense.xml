<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..Update or Delete.."
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#2DCDD1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Category"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="   Amount"
                android:background="@drawable/border"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <!-- Replace the EditText for payer with a Spinner -->
            <Spinner
                android:id="@+id/spinnerPayer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnUpdateExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Expense"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnDeleteExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Expense"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
