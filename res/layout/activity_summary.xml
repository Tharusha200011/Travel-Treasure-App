<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:backgroundTint="#2DCDD1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..Summary.."
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>


    <!-- Table Layout for displaying the summary -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <TableLayout
                android:id="@+id/tableLayoutSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:padding="10dp">

                <TableRow>
                    <TextView
                        android:text="Member Name"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/border"
                        android:padding="5dp"/>

                    <TextView
                        android:text="Group Contribution"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/border"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Amount Spent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/border"
                        android:padding="5dp"/>

                    <TextView
                        android:text="To Be Received"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/border"
                        android:padding="5dp"/>

                    <TextView
                        android:text="To Be Contributed"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/border"
                        android:padding="5dp"/>
                </TableRow>


            </TableLayout>

        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As Chart"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="35dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/btnDownloadPDF"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:backgroundTint="#2DCDD1"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_picture_as_pdf_24"
                android:contentDescription="Add Expense"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="1dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSharePdf"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:backgroundTint="#2DCDD1"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_share_24"
                android:contentDescription="Add Expense"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="1dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
